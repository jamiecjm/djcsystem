
<div class="col-lg-12">
	<h1 class="page-header">Team Members' Profile</h1>

	<!--     <input type="text" name="ren_name"> -->
	
		<div class="col-sm-3 col-md-2 col-lg-2 form-group">
			<select name="ren_name" class="form-control" required onchange="location = this.value">
					<option value="#">Edit REN Profile</option>
				<%@users.each do |user|%>
				  <option value="/users/<%=user.id%>/edit"><%=user.prefered_name%></option>
			 	<%end%>
			</select>
		</div>

		<div class="col-sm-4 col-md-4 col-lg-4">
			<%=form_tag search_by_name_path(ids: @users.pluck(:id)),:method => :post,:remote => true,class: "form-inline" do%>
					<%=text_field_tag :search,nil,placeholder: "Search by name", class: "form-control"%>
					<%=submit_tag "Search", class: "btn btn-default"%>
			<%end%>
		</div>
		<button id="btnExport" class="btn btn-default" style="float: right;">Export to xls</button>

	
	 
	<br>

	<div class="search_by_name">
		<%=render 'profile_table'%>
		<%= paginate @paginated_user %><br>
		<%if @paginated_user.size != @paginated_user.total_count%>
			<%=link_to "Display all in one page", request.fullpath+"?limit=#{@paginated_user.total_count}&page=#{nil}"%>
		<%end%>	
		
	</div>
</div>