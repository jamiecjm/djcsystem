<%=render 'options'%>

<script type="text/javascript">

  // Load the Visualization API and the corechart package.
  google.charts.load('current', {'packages':['corechart']});

  // Set a callback to run when the Google Visualization API is loaded.
  google.charts.setOnLoadCallback(drawChart);

  // Callback that creates and populates a data table,
  // instantiates the pie chart, passes in the data and
  // draws it.
  function drawChart() {

    // Create the data table.
    var data = new google.visualization.arrayToDataTable([
        ["REN","REN Nett Value to date",{role: "annotation"}],
        <%if @ren == []%>
              [0, 0,0]
        <%else%>
            <%@ren.each_with_index do |r,index|%>
              ["<%=r%>", <%=@value[index].round%>,<%=@value[index].round%>],
            <%end%>
            <%if @ren.length < 35 %>
                <%(35-@ren.length).times do%>
                    [null, null,null],
                <%end%>
            <%elsif @ren.length < 60 %>
                <%(60-@ren.length).times do%>
                    [null, null,null],
                <%end%>
            <%end%>
        <%end%>
        
        ]);

    // Set chart options
    var options = {'title':'Date: <%=Time.now.to_date%> ~ Total: RM <%=number_with_delimiter('%.2f' % @value.sum)%>',
                    'height':<%=@height%>,
                    'chartArea': {'width': '80%','height': '90%'},
                    'vAxis':{
                        textStyle: {
                          fontSize: <%=@font%>
                        }
                      },
                      'hAxis':{
                        textStyle: {
                          fontSize: <%=@font%>
                        }
                      },
                      'annotations':{
                        textStyle: {
                          fontSize: <%=@font%>
                        }
                      },
                      'titleTextStyle':{
                          fontSize: 12
                      },
                      'legend':{
                        position: 'top',
                        textStyle: {
                          fontSize: 12
                        }
                      }};

    // Instantiate and draw our chart, passing in some options.
    var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
    chart.draw(data, options);
  }

  $(window).resize(function(){
    drawChart();
  });
</script>
