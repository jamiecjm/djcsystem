<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 sign-in">

	<%=cl_image_tag website_logo, :secure=>true, class: "img-responsive", style: "margin: 0 auto;max-height: 250px;" unless current_website.nil?%>


	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-group field">
	    <%= f.text_field :login, class: "form-control", placeholder: "Prefered Name or Email",value: nil %>
	  </div>

	  <div class="form-group field">
	    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"  %>
	  </div>

	<div class="row">
	    <%= f.submit "Log in", class: "btn btn-default", style: "margin-left: 15px;" %>
	<% end %>

  <%= link_to "Register", new_registration_path(resource_name), class: "btn btn-default" %><br />
</div>

  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</div>