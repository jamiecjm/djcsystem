<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 well">

<h1 class="page-header">Register</h1>
<p style="color:red">**Please check with your leader whether you have an account before registering.</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

    <%= render partial: '/users/form', object: form %>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password,class: "form-control",required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation,class: "form-control",required: true %>
    </div>

    <div class="form-group">
      <%= form.submit "Register", class: "btn btn-default" %>
    </div>

<% end %>


</div>