<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 well">
<div class="col-lg-12">
<h1 class="page-header">Edit Sale #<%=@sale.id%></h1>
</div>

<%=nested_form_for @sale do |form|%>

<%=render "edit", form: form%>

<div class="col-xs-2 col-sm-2 col-md-2">
<%= form.submit "Update",class: "btn btn-default",style: "margin-left: -15px;" %>
</div>
<%end%>


<div style="float:right">
<button data-toggle="modal" data-target="#deleteModal" class="btn btn-default">Delete</button>
</div>
<div style="float:left">
<button data-toggle="modal" data-target="#emailModal" class="btn btn-default">Email Admin</button>
</div>
</div>

<div id="deleteModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <h3>Delete Sale #<%=@sale.id%>?</h3>
      </div>
      <div class="modal-footer">
      	<%= link_to "/sales/#{@sale.id}",class: "btn btn-default",style: "float:left", method: :delete do%>Yes<%end%>
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
      </div>
    </div>

  </div>
</div>

<%=render "emailModal"%>